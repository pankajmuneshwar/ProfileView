<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.genie.profileimageview.ProfileImage
        android:id="@+id/circularProfileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile"
        android:layout_marginTop="20dp"
        app:shape="circle"
        app:borderSize="2"
        app:borderColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.genie.profileimageview.ProfileImage
        android:id="@+id/squareProfileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile"
        android:layout_marginTop="20dp"
        app:shape="Square"
        app:borderSize="2"
        app:borderColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/circularProfileImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.genie.profileimageview.ProfileImage
        android:id="@+id/roundedCornerProfileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile"
        android:layout_marginTop="20dp"
        app:shape="Rounded Corner"
        app:borderSize="2"
        app:roundedCorner="50"
        app:borderColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/squareProfileImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.genie.profileimageview.ProfileImage
        android:id="@+id/ovalProfileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile"
        android:layout_marginTop="20dp"
        app:shape="oval"
        app:ovalCorner="15"
        app:borderSize="2"
        app:borderColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/roundedCornerProfileImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>